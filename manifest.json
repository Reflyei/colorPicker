{
    "manifest_version": 2,
    "name": "颜色提取器",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "commands",
        "clipboardWrite"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "commands": {
        "capture_color": {
            "suggested_key": {
                "default": "Alt+C"
            },
            "description": "获取当前鼠标位置颜色"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}